<link href="assets/blog.css" rel="stylesheet">
<body id="bloggy"></body>

<h4>Current Assignment</h4>
<p>
  <strong>Title:</strong>
  <%= @current_assignment.title %>
</p>
<p>
  <strong>Due:</strong>
  <%= @current_assignment.due.strftime("%B %d at %I:%M %p") %></li>
</p>

<p>
  <strong>Description:</strong>
  <div style="width: 1068px; height: 100px; overflow: auto; background-color: #FFFFFF; outline: 2px solid #A05E1D; padding: 5px", class="boxed">
  <%= raw @current_assignment.description %>
  </div>
</p>
<br><br>
<h4>My Blog Posts</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= if current_user.admin?
      @link_name = 'Grade'
    else
       @link_name = 'Edit'
      end %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <% if post.user.nil? %>
             <td> None </td>
           <% else %>
         <td><%= post.user.nickname %></td>
      <% end %>
        <td><%= post.assignment.due.strftime("%B %d at %I:%M %p") %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to @link_name, edit_post_path(post) %></td>
        
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

<%= unless current_user.admin?
  link_to 'New Post', new_post_path 
  end%>
