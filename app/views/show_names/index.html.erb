<h1>Listing show_names</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_names.each do |show_name| %>
      <tr>
        <td><%= link_to 'Show', show_name %></td>
        <td><%= link_to 'Edit', edit_show_name_path(show_name) %></td>
        <td><%= link_to 'Destroy', show_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show name', new_show_name_path %>
