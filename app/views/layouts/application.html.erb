<!DOCTYPE html>
<html> 
<head>
  <title>COSI 125a</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tags %>
  <%= if current_user.nil?
        @first_entry = ''
        @second_entry = ''
        @third_entry = ''
      elsif current_user.admin?
        @first_entry = 'Overview'
        @first_link = '/admin_pg/index'
        @second_entry = 'Users'
        @second_link = "/users"
        @third_entry = 'Assignments'
        @third_link = "/assignments"
        @fourth_entry = 'Groups'
        @fourth_link = "/groups"
        @fifth_entry = 'Posts'
        @fifth_link = "/posts"
        @sixth_entry = 'Evaluations'
        @sixth_link = "/evaluations"
        @seventh_entry = 'Wikis'
        @seventh_link = "/wiki/show"
        else
        @first_entry = 'My Blog - Editorials'
        @first_link = '/posts'
        @second_entry = 'My Team'
          if current_user.group.nil?
            @second_link = '/groups/join'
          else
            @second_link = '/groups'
          end

        @third_entry = 'My Wiki - Book Reviews'
          if current_user.group.nil?
            @third_link = "/home/index"
          else
             @third_link = "/wiki"
          end
        @fourth_entry = 'My Evaluations'
        @fourth_link = "/evaluations"
        @fifth_entry = 'Home'
        @fifth_link = "/home/index"
        end%>
   <link href="assets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="assets/dashboard.css" rel="stylesheet">

    <script src="../../assets/js/ie-emulation-modes-warning.js"></script>
</head>
<body class='<% controller.controller_name %>'>
	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" >CS125 - Human Computer Interaction</a>   
        </div>
        <div>
          <p class="navbar-nickname"> Logged in as: <%= 
            if current_user.nil?
              "Not Logged In"
            else
              current_user.nickname 
            end %>
          </p> 
        </div>

      </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
             <li><a href="<%= @first_link %>"><%= @first_entry %></a></li>
            <li><a href="<%= @second_link %>"><%= @second_entry %></span></a></li>
            <li><a href="<%= @third_link %>"><%= @third_entry %></a></li>
            <li><a href="<%= @fourth_link %>"><%= @fourth_entry %></a></li>
            <li><a href="<%= @fifth_link %>"><%= @fifth_entry %></a></li>
            <li><a href="<%= @sixth_link %>"><%= @sixth_entry %></a></li>
             <li><a href="<%= @seventh_link %>"><%= @seventh_entry %></a></li>
           </ul>
             <ul class="nav navbar-nav navbar-right" style="margin-right:10px">
            <li><a href="/home/index">Home</a></li>
            <li><a href="/users/edit">Profile</a></li>
            <li><a href="#">Help</a></li>
            <li><a <%=link_to 'Sign out', destroy_user_session_path, :method => :delete %></a></li>
          </ul>
        </div>
      </div>
 	</nav>
      
<body>

	<div class="row">
    <div class="col-md-12">
      <%= yield %>
    </div>
  </div>

</body>

<footer>
</footer>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>
